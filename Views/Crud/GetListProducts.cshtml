@model Task<IEnumerable<Product>>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6">
            <a asp-action="CreateProduct" class="btn btn-primary float-end">
                <i class="fa-solid fa-plus"></i> &nbsp; Create new Product
            </a>
        </div>
    </div>

    <br /> <br />

    @if (Model != null )
    {
        <table class="table table-bordered table-striped" style="width:100%; background-color:#FFFFE0;">
            <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Type
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Result.ToList())
                {
                    <tr>
                        <td witdh="40%">@item.Title</td>
                        <td witdh="30%">@item.Price</td>
                        <td witdh="30%">@item.Type</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-route-Id="@item.ProductId" asp-action="UpdateProduct" class="btn btn-primary mx-2">
                                    <i class="fa-regular fa-pen-to-square"></i> 
                                </a>
                                <a asp-route-Id="@item.ProductId" asp-action="DeleteProduct" class="btn btn-danger mx-2">
                                    <i class="fa-solid fa-trash-can"></i>  
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No product exist.</p>
    }
</div>

